
CREATE ROLE LOCAL_ADMIN_ROLE2;

GRANT ALL PRIVILEGES ON DATABASE poc1_db1 TO ROLE LOCAL_ADMIN_ROLE2;

GRANT ROLE SYSADMIN, SECURITYADMIN TO ROLE LOCAL_ADMIN_ROLE2; // REVOKED SYSADMIN and SECURITYADMIN

GRANT ROLE D_FULL TO ROLE LOCAL_ADMIN_ROLE2;

GRANT CREATE USER, CREATE ROLE ON ACCOUNT TO ROLE LOCAL_ADMIN_ROLE2;

CREATE USER poc1_admin2 PASSWORD = 'poc1_admin2';

GRANT ROLE LOCAL_ADMIN_ROLE2 TO USER poc1_admin2;

GRANT ROLE D_USAGE, S_WRITE TO ROLE DEVELOPER_ROLE2;



temporary:
GRANT ROLE D_FULL TO ROLE LOCAL_ADMIN_ROLE2 WITH GRANT OPTION;